@{
   Layout = "~/Views/Settings/NotificationsPageLayout.cshtml";
   String successMessage = @Resources.Global.settingsActivityReportPlanChangedSuccessfully
      + " " + ViewData["activityReportChose"];
   var cssClass = ViewData["notification"].ToString().Equals("success") ?
      "actionSuccess" : "actionError";   
}

@if (!ViewData["notification"].ToString().Equals("noNotification"))
{
   <div id="actionResult" class="@cssClass">
      @if (ViewData["notification"].ToString().Equals("success"))
      {
         <div id="successMessage">@successMessage</div>
      }
      else if (ViewData["notification"].ToString().Equals("error"))
      {
         <div id="errorMessage">@Resources.Global.settingsActivityReportPlanChangedError</div>  
      }
   </div>
}
